.bdr-r {
    position: relative;
}

.bdr-r:after {
    height: 100%;
    content: '';
    width: 1px;
    border-right: 1px solid #f0f0f0;
    position: absolute;
    top: 0;
    right: 0;
    transform: scaleX(0.5);
    z-index: 10;
}


/* 加载更多*/

.loadMore {
    width: 100%;
    background-color: #fff;
    text-align: center;
    font-size: 16px;
    color: #ff819f;
    padding: 20rpx 0;
    margin: 0 auto;
    height: 30rpx;
}

.loadMore view {
    display: inline-block;
    width: 4rpx;
    height: 100%;
    margin-right: 10rpx;
    border-radius: 4rpx;
    background: #ff819f;
    animation: load 1s ease infinite;
}

@keyframes load {
    0%,
    100% {
        height: 10rpx;
        background: #ff819f;
    }
    50% {
        height: 40rpx;
        margin: -10rpx 0;
        background: lightgreen;
    }
}

.loadMore view:nth-child(2) {
    animation-delay: 0.2s;
}

.loadMore view:nth-child(3) {
    animation-delay: 0.4s;
}

.loadMore view:nth-child(4) {
    animation-delay: 0.6s;
}

.loadMore view:nth-child(5) {
    animation-delay: 0.8s;
}
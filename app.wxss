.detail-list .list-item {
    background-color: #fff;
    margin-bottom: 6rpx;
    overflow: hidden;
}

.detail-list .list-item .hd {
    display: flex;
    padding: 20rpx 20rpx 0;
    align-items: center;
}

.detail-list .hd .hot-wrap {
    margin: 0 auto;
    font-size: 12px;
    width: 40rpx;
    line-height: 1.5;
    text-align: center;
    background: #ff819f;
    color: #fff;
    margin-right: 2rpx;
    transform: scale(.6);
}

.detail-list .hd .avatar {
    display: block;
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    margin-right: 20rpx;
    border: 1rpx solid #f3f3f3;
}

.detail-list .hd .username {
    flex: 1;
    color: #787878;
    font-size: 14px;
}


/* 中间内容 */

.detail-list .bd {
    font-size: 16px;
    color: #333;
    word-break: break-all;
    word-wrap: break-word;
    line-height: 1.5;
}

.detail-list .bd .text-wrapper {
    padding: 5px 10px;
}

.detail-list .bd .bar-link {
    display: inline-block;
    border-radius: 12rpx;
    padding: 0 10rpx;
    border: 2rpx solid #5e96b4;
    color: #5e96b4;
    font-size: 14px;
}

.detail-list .bd .video-wrapper {
    display: flex;
    position: relative;
    max-height: 600rpx;
    overflow: hidden;
}

.detail-list .video-wrapper .video-thumb {
    width: 100%;
}

.detail-list .video-wrapper .play-icon {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: url(data:image/png;base64,) no-repeat center center;
    background-size: 100%;
    width: 120rpx;
    height: 120rpx;
}

.detail-list .video-wrapper .video-desc {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    padding: 0 20rpx;
    background-color: rgba(0, 0, 0, .4);
    color: #fff;
    font-size: 14px;
    box-sizing: border-box;
    overflow: hidden;
}

.detail-list .video-desc .play-count {
    float: left;
}

.detail-list .video-desc .num {
    color: #ff819f;
}

.detail-list .video-desc .play-duration {
    float: right;
}

.detail-list .preview-wrapper {
    position: relative;
    overflow: hidden;
    max-height: 1000rpx;
}

.detail-list .preview-wrapper .preview-img {
    width: 100%;
}

.detail-list .preview-wrapper .long-img {
    text-align: center;
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100rpx;
    background: url(//s3.pstatp.com/resource/neihan_wap/static/image/long-img-bg_b8c6002.png) repeat-x center center;
    background-size: auto 100%;
}

.detail-list .preview-wrapper .long-text {
    display: inline-block;
    font-size: 14px;
    color: #fff;
    height: 100rpx;
    line-height: 100rpx;
    padding-left: 60rpx;
    background: url(//s3a.pstatp.com/resource/neihan_wap/static/image/long-img-icon_e84cd76.png) no-repeat left center;
    background-size: auto 40%;
}

.detail-list .preview-wrapper .preview-icon {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: url(data:image/png;base64,) no-repeat center center;
    background-size: 100%;
    width: 120rpx;
    height: 120rpx;
}

.detail-list .thumb-wrapper {
    display: flex;
    flex-flow: wrap;
    background-color: #f2f2f5;
}

.detail-list .thumb-wrapper .thumb-item {
    width: 32%;
    margin-left: 1%;
    margin-bottom: 1%;
    box-sizing: border-box;
    position: relative;
}

.detail-list .thumb-wrapper .thumb-item.is_gif::after {
    content: 'GIF';
    position: absolute;
    right: 0;
    bottom: 0;
    background: #000;
    color: #fff;
    font-size: 10px;
    border-radius: 16rpx 0 0 0;
    padding: 6rpx 10rpx;
}


/* 底部*/

.detail-list .ft {
    display: flex;
    height: 90rpx;
    align-items: center;
    font-size: 14px;
    background-color: #fff;
}

.bdr-top,
.bdr-bottom {
    position: relative
}

.bdr-top:before {
    height: 1px;
    content: '';
    width: 100%;
    border-bottom: 1px solid #f0f0f0;
    position: absolute;
    top: -1px;
    right: 0;
    transform: scaleY(0.5);
    z-index: 10;
}

.bdr-bottom:after {
    height: 1px;
    content: '';
    width: 100%;
    border-top: 1px solid #f0f0f0;
    position: absolute;
    bottom: -1px;
    right: 0;
    transform: scaleY(0.5);
    z-index: 10;
}

.detail-list .ft .btn {
    flex: 1;
    text-align: center;
    color: #999;
}

.detail-list .ft .btn-text {
    display: inline-block;
    text-align: left;
    background-repeat: no-repeat;
    padding-left: 50rpx;
    background-size: auto 60%;
    line-height: 60rpx;
    box-sizing: border-box;
    white-space: nowrap;
